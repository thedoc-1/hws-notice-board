<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ title or "HWS notice board" }}</title>
  <link rel="manifest" href="/manifest.json">
  <link rel="icon" href="/icons/icon-192.png">
  <meta name="theme-color" content="#0b74da" />
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <header>
      <h1><a href="/">{{ title or "HWS notice board" }}</a></h1>
      <nav>
        <a href="/">Today</a>
        <a href="/urgent/">Urgent</a>
        <a href="/normal/">Notices</a>
        <a href="/opportunities/">Opportunities</a>
        <a href="/community/">Community</a>
        <a href="/past/">Past</a>
        <a href="/admin/" style="float:right">Admin</a>
      </nav>
      <hr/>
    </header>

    <main>
      {{ content | safe }}
    </main>

    <footer>
      <hr/>
      <small>HWS notice board — PWA • Netlify CMS • Free hosting</small>
    </footer>
  </div>

  <script>
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.register('/service-worker.js').catch(console.error);
    }
  </script>
</body>
</html>
